# Learn2Play Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================

# Application version for Docker image tagging
VERSION=latest

# Environment type (development, test, production)
ENVIRONMENT=production

# Data and logs paths
DATA_PATH=./data
LOGS_PATH=./logs

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Production Database
POSTGRES_CONTAINER_NAME=l2p-postgres
POSTGRES_DB=learn2play
POSTGRES_USER=l2p_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# Database SSL configuration
DB_SSL=true

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================

# Backend container and port
BACKEND_CONTAINER_NAME=l2p-api
BACKEND_PORT=3001

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_minimum_32_characters

# Frontend URL for CORS
FRONTEND_URL=https://your-domain.com

# Logging configuration
LOG_LEVEL=info
ENABLE_FILE_LOGGING=false
ENABLE_REMOTE_LOGGING=false
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=5
LOG_REMOTE_ENDPOINT=
LOG_API_KEY=

# Error handling and monitoring
ENABLE_NOTIFICATIONS=true
SERVICE_NAME=trivia-app
APP_VERSION=1.0.0

# Notification channels
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=admin@example.com

SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts

SMS_API_KEY=
ALERT_PHONE_NUMBER=

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Frontend container
FRONTEND_CONTAINER_NAME=l2p-app

# Vite environment variables
VITE_API_URL=https://your-domain.com/api
VITE_SOCKET_URL=https://your-domain.com

# =============================================================================
# CHROMADB CONFIGURATION
# =============================================================================

# ChromaDB container
CHROMA_CONTAINER_NAME=l2p-chroma

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Settings
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your_email_password_or_app_password

# Email sender information
EMAIL_SENDER_ADDRESS=noreply@your-domain.com
EMAIL_SENDER_NAME=Learn2Play

# =============================================================================
# GOOGLE CLOUD / GEMINI AI CONFIGURATION
# =============================================================================

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# =============================================================================
# TRAEFIK REVERSE PROXY CONFIGURATION
# =============================================================================

# Traefik container
TRAEFIK_CONTAINER_NAME=l2p-proxy

# Domain configuration
DOMAIN=your-domain.com

# Port configuration
TRAEFIK_HTTP_PORT=80
TRAEFIK_HTTPS_PORT=443
TRAEFIK_METRICS_PORT=8080

# Let's Encrypt configuration
LETSENCRYPT_EMAIL=admin@your-domain.com

# Traefik logging
TRAEFIK_LOG_LEVEL=INFO

# =============================================================================
# DEVELOPMENT ENVIRONMENT OVERRIDES
# =============================================================================

# Uncomment and modify these for development
# POSTGRES_PORT=5432
# DB_SSL=false
# LOG_LEVEL=debug
# JWT_SECRET=dev-jwt-secret-not-for-production
# JWT_REFRESH_SECRET=dev-jwt-refresh-secret-not-for-production
# FRONTEND_URL=http://localhost:3000
# VITE_API_URL=http://localhost:3001/api
# VITE_SOCKET_URL=http://localhost:3001

# =============================================================================
# SECURITY NOTES
# =============================================================================

# IMPORTANT SECURITY CONSIDERATIONS:
# 1. Never commit this file with real secrets to version control
# 2. Use strong, unique passwords for all services
# 3. JWT secrets should be at least 32 characters long
# 4. In production, consider using Docker secrets or external secret management
# 5. Regularly rotate passwords and API keys
# 6. Use environment-specific configurations for different deployment stages

# =============================================================================
# DOCKER COMPOSE PROFILES
# =============================================================================

# To use different environments:
# Development: docker-compose --profile development up
# Testing: docker-compose --profile test up  
# Production: docker-compose --profile production up

# You can also combine profiles:
# docker-compose --profile development --profile test up