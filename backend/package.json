{
  "name": "learn2play-backend",
  "version": "1.0.0",
  "description": "Learn2Play multiplayer quiz game backend",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsc && nodemon dist/server.js",
    "db:health": "tsx --import tsx src/cli/database.ts health",
    "test": "TEST_ENVIRONMENT=local TEST_TYPE=unit jest",
    "test:watch": "TEST_ENVIRONMENT=local TEST_TYPE=unit jest --watch",
    "test:coverage": "TEST_ENVIRONMENT=local TEST_TYPE=unit jest --coverage",
    "test:unit": "TEST_ENVIRONMENT=local TEST_TYPE=unit jest src/__tests__/unit",
    "test:unit:local": "TEST_ENVIRONMENT=local TEST_TYPE=unit jest src/__tests__/unit",
    "test:unit:ci": "TEST_ENVIRONMENT=ci TEST_TYPE=unit jest src/__tests__/unit",
    "test:integration": "TEST_ENVIRONMENT=local TEST_TYPE=integration jest src/__tests__/integration --passWithNoTests",
    "test:integration:local": "TEST_ENVIRONMENT=local TEST_TYPE=integration jest src/__tests__/integration --passWithNoTests",
    "test:integration:ci": "TEST_ENVIRONMENT=ci TEST_TYPE=integration jest src/__tests__/integration --passWithNoTests",
    "test:integration:docker": "TEST_ENVIRONMENT=docker TEST_TYPE=integration jest src/__tests__/integration --passWithNoTests",
    "test:e2e": "TEST_ENVIRONMENT=local TEST_TYPE=e2e jest src/__tests__/e2e --passWithNoTests",
    "test:api": "TEST_ENVIRONMENT=local TEST_TYPE=integration jest src/__tests__/integration/api",
    "test:socket": "TEST_ENVIRONMENT=local TEST_TYPE=integration jest src/__tests__/integration/websocket",
    "test:performance": "TEST_ENVIRONMENT=local TEST_TYPE=performance jest src/__tests__/performance",
    "test:email": "../scripts/test-email.sh",
    "test:ai": "tsx --import tsx src/cli/test-ai.ts",
    "test:ai-mock": "tsx --import tsx src/cli/test-ai-mock.ts",
    "test:ai-real": "tsx --import tsx src/cli/test-ai-real.ts"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "joi": "^17.9.1",
    "jsdom": "^23.0.1",
    "jsonwebtoken": "^9.0.0",
    "mammoth": "^1.6.0",
    "marked": "^9.1.6",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.0",
    "nodemon": "^3.0.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.10.0",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.6",
    "typescript": "^5.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.11",
    "@types/nodemailer": "^6.4.0",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^6.0.2",
    "artillery": "^2.0.23",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.1"
  }
}
