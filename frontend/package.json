{
  "name": "learn2play-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "TEST_ENVIRONMENT=local TEST_TYPE=unit jest",
    "test:watch": "TEST_ENVIRONMENT=local TEST_TYPE=unit jest --watch",
    "test:coverage": "TEST_ENVIRONMENT=local TEST_TYPE=unit jest --coverage",
    "test:ci": "TEST_ENVIRONMENT=ci TEST_TYPE=unit jest --ci --coverage --watchAll=false",
    "test:unit": "TEST_ENVIRONMENT=local TEST_TYPE=unit jest src/__tests__/unit",
    "test:unit:local": "TEST_ENVIRONMENT=local TEST_TYPE=unit jest src/__tests__/unit",
    "test:unit:ci": "TEST_ENVIRONMENT=ci TEST_TYPE=unit jest src/__tests__/unit",
    "test:integration": "TEST_ENVIRONMENT=local TEST_TYPE=integration jest src/__tests__/integration --passWithNoTests",
    "test:integration:local": "TEST_ENVIRONMENT=local TEST_TYPE=integration jest src/__tests__/integration --passWithNoTests",
    "test:integration:ci": "TEST_ENVIRONMENT=ci TEST_TYPE=integration jest src/__tests__/integration --passWithNoTests",
    "test:e2e": "TEST_ENVIRONMENT=local TEST_TYPE=e2e playwright test --config=playwright.config.ts",
    "test:e2e:smoke": "TEST_ENVIRONMENT=local TEST_TYPE=e2e playwright test smoke --config=playwright.config.ts",
    "test:e2e:integration": "TEST_ENVIRONMENT=local TEST_TYPE=e2e playwright test integration --config=playwright.config.ts",
    "test:e2e:performance": "TEST_ENVIRONMENT=local TEST_TYPE=performance playwright test performance --config=playwright.config.ts",
    "test:e2e:accessibility": "TEST_ENVIRONMENT=local TEST_TYPE=accessibility playwright test accessibility --config=playwright.config.ts",
    "test:e2e:error-handling": "TEST_ENVIRONMENT=local TEST_TYPE=e2e playwright test error-handling --config=playwright.config.ts",
    "test:e2e:headed": "TEST_ENVIRONMENT=local TEST_TYPE=e2e playwright test --headed --config=playwright.config.ts",
    "test:e2e:ui": "TEST_ENVIRONMENT=local TEST_TYPE=e2e playwright test --ui --config=playwright.config.ts"
  },
  "dependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-router-dom": "^6.8.1",
    "socket.io-client": "^4.6.1",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.5",
    "@vitejs/plugin-react": "^4.0.0",
    "axe-core": "^4.10.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.40.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.2",
    "vite": "^4.3.2"
  }
}
